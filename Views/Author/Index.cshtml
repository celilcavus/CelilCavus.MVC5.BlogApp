
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@model Author

@using (Html.BeginForm("Index", "Author", FormMethod.Post))
{
    @Html.Label("Author Image")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control", @type = "file" })

    <div class="alert alert-danger">@Html.ValidationMessageFor(x => x.AuthorAbout)</div>
    <br />
    @Html.Label("Author Name")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    <br />
    <div class="alert alert-danger">@Html.ValidationMessageFor(x => x.AuthorAbout)</div>
    @Html.Label("Author About")
    @Html.TextAreaFor(x => x.AuthorAbout, new { @class = "form-control", @style = "height:200px;" })
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
}
<br />

@Html.Action("GetAuthorView", "Author")

